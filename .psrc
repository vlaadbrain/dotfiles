if [[ "$DISPLAY" ]] 
then
    PROMPT_COMMAND='echo -ne "\033]0;[XT] ${PWD}\007"'
fi

parse_git_branch() {
     git branch 2> /dev/null | sed -e '/^[^*]/d' -e 's/* \(.*\)/ (\1) /'
}

PS1="\[\033[1;31m\][\[\033[1;36m\] \u \[\033[1;37m\]@\[\033[1;36m\] \h \A \[\033[1;31m\]\[\033[1;36m\]\w\[\033[1;37m\]\$(parse_git_branch)\[\033[1;31m\]]\n\[\033[1;31m\]\$\[\033[0m\] "; export PS1
PS2="\[\033[1;31m\]>\[\033[0m\] "; export PS2
